{
  "name": "kotha",
  "version": "0.2.3",
  "description": "Kotha, a smart voice assistant",
  "main": "./out/main/main.js",
  "license": "MIT",
  "author": {
    "name": "Kotha GPT",
    "url": "https://github.com/KothaGPT/kotha"
  },
  "build": {
    "appId": "xyz.kothagpt.kotha",
    "asar": true,
    "extraResources": [
      {
        "from": "lib/generated",
        "to": "proto",
        "filter": [
          "**/*.proto"
        ]
      }
    ]
  },
  "scripts": {
    "dev": "electron-vite dev -w",
    "dev:rust": "bun build:rust:mac && bun dev",
    "format:fix:app": "prettier --write app lib",
    "format:fix": "prettier --write .",
    "lint:fix:app": "eslint app lib --ext .ts,.tsx --fix",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:app": "eslint app lib --ext .ts,.tsx",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit --project tsconfig.node.json",
    "format:app": "prettier app lib --check",
    "format": "prettier . --write",
    "start": "electron-vite preview",
    "runAllTests": "bun runLibTests",
    "runLibTests": "find lib -name \"*.test.ts\" | xargs -I {} sh -c 'bun test --preload lib/__tests__/setup.ts {} || exit 255'",
    "runServerTests": "find server/src -name \"*.test.ts\" | xargs -I {} sh -c 'bun test {} || exit 255'",
    "clean": "rm -rf node_modules dist .vite",
    "clean:kotha-app-data": "rm -rf ~/Library/Application\\ Support/Kotha",
    "postinstall": "bunx @electron/rebuild",
    "vite:build:app": "electron-vite build",
    "build:rust": "./build-binaries.sh",
    "build:rust:mac": "./build-binaries.sh --mac --universal",
    "electron:build:win": "./build-binaries.sh && electron-builder --win --x64",
    "electron:build:mac": "./build-binaries.sh && electron-builder --mac --universal",
    "electron:build:mac-only": "SKIP_WINDOWS=1 electron-vite build && electron-builder --mac --universal",
    "electron:build:dir": "./build-binaries.sh && electron-builder --dir",
    "build:unpack": "electron-vite build && electron-builder --dir",
    "build:win": "electron-vite build && electron-builder --win --x64",
    "build:mac": "electron-vite build && electron-builder --mac --universal",
    "build:app": "./build-app.sh",
    "build:app:skip-binaries": "./build-app.sh --skip-binaries",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guasam/electron-react-app"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  },
  "dependencies": {
    "@amplitude/analytics-browser": "^2.18.1",
    "@amplitude/analytics-node": "^1.3.8",
    "@auth0/auth0-react": "^2.3.0",
    "@bufbuild/protobuf": "^2.6.0",
    "@connectrpc/connect": "^2.0.2",
    "@connectrpc/connect-node": "^2.0.2",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/lab": "^7.0.0-beta.13",
    "@mui/material": "^7.1.1",
    "@mynaui/icons-react": "^0.3.8",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.54.0",
    "@opentelemetry/semantic-conventions": "^1.25.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.0.1",
    "electron-log": "^5.4.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.511.0",
    "react-router-dom": "^7.6.2",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.3.0",
    "tw-animate-css": "^1.3.2",
    "uuid": "^11.1.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/rebuild": "^4.0.1",
    "@eslint/js": "^9.28.0",
    "@rushstack/eslint-patch": "^1.11.0",
    "@tailwindcss/vite": "^4.1.8",
    "@types/bun": "^1.2.19",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.5.0",
    "bun-types": "^1.2.19",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "eslint": "^9.28.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "framer-motion": "^12.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "release-it": "^19.0.4",
    "semantic-release": "^24.2.7",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite": "^6.3.5"
  },
  "packageManager": "yarn@1.22.19+sha512.ff4579ab459bb25aa7c0ff75b62acebe576f6084b36aa842971cf250a5d8c6cd3bc9420b22ce63c7f93a0857bc6ef29291db39c3e7a23aab5adfd5a4dd6c5d71"
}
